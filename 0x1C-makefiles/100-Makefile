CC = gcc
SRC = main.c school.c
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): main.o school.o m.h
	$(CC) main.o school.o -o $(NAME)
	
main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c
	
school.o: school.c m.h
	$(CC) $(CFLAGS) -c school.c

clean:
	$(RM) *~

oclean:
	$(RM) main.o school.o
	
fclean: clean oclean
	$(RM) $(NAME)

re: fclean all
